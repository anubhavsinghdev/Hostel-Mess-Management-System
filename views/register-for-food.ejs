<%- include("header.ejs") -%>

<body class="text-center">

    <main class="form-signin">
        <form action="/register-for-food" method="post">
            <img class="mb-4" src="/logo-black.png" alt="" width="72" height="72">
            <h1 class="h3 mb-3 fw-normal">Register for Food</h1>

            <div class="form-floating">
                <input type="text" class="form-control" id="floatingInput" placeholder="Username" name="username"
                    required>
                <label for="floatingInput">Username</label>
            </div>

            <select name="foodType" class="form-select" aria-label="Default select example">
                <option selected>Open this to select menu</option>
                <option value="1">Minimal(₹2500/mo)</option>
                <option value="2">Foodie(₹3500/mo)</option>
                <option value="3">Body Builders(₹4500/mo)</option>
            </select>

            <select name="paymentMethod" class="form-select" aria-label="Default select example">
                <option selected>Select Payment Method</option>
                <option value="1">Cash</option>
                <option value="2">Online</option>
                <option value="3">Postpaid</option>
            </select>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Register</button>
            <p class="mt-5 mb-3 text-muted">&copy; 2022</p>
        </form>
    </main>
</body>

</html>